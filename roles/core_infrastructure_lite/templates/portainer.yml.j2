---
services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    hostname: portainer
    ports:
      - "9443:9443"
    volumes:
      - {{ portainer_data_path }}:/data
      - /var/run/docker.sock:/var/run/docker.sock
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
          max-size: "50m"
    networks:
      {{ home_lab_network_name }}:    

networks:
  {{ home_lab_network_name }}:
    external: true