---
services:
  putty:
    image: jlesage/putty
    container_name: putty
    hostname: putty
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
          max-size: "50m"
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/London
    ports:
      - "5800:5800"
    volumes:
      - {{ putty_config_path }}:/config:rw
    networks:
      - {{ home_lab_network_name }}

networks:
  {{ home_lab_network_name }}:
    external: true