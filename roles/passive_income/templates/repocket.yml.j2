---
###
# CPU usage: Low (5% max observed)
# RAM usage: 40 Mb
# ROI: Very low
# deploy to rpi: 3, 4, 5
# home ISP: YES
# VPS : YES
###

services:
  repocket:
    image: repocket/repocket:latest
    container_name: repocket
    restart: always
    logging:
      driver: "json-file"
      options:
          max-size: "10k"
          max-file: 1
    environment:
      - RP_EMAIL={{ vault_repocket_email }}
      - RP_API_KEY={{ vault_repocket_api_key }}
    deploy:
      resources:
        limits:
          cpus: '0.1'
          memory: 40M
    networks:
      {{ passive_income_network_name }}:
      

networks:
  {{ passive_income_network_name }}:
    external: true
